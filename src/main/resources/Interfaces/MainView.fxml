<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="730" prefWidth="337" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MainViewController">
    <children>
      <BorderPane prefHeight="730.0" prefWidth="337.0">
         <left>
               <Button onAction="#handlePreviousItem" text="&lt;" BorderPane.alignment="CENTER" />
         </left>
         <right>
               <Button onAction="#handleNextItem" text="&gt;" BorderPane.alignment="CENTER" />
         </right>
         <top>
              <Label fx:id="stepLabel" text="Select Main Item" textAlignment="CENTER" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="30.0" />
               </BorderPane.margin>
               <font>
                  <Font size="15.0" />
               </font></Label>
         </top>
         <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                    <ImageView fx:id="itemImageView" fitHeight="230.0" fitWidth="500.0" preserveRatio="true">
                     <image>
                        <Image url="@../Images/DoubleKrustyBurgerWCheese.png" />
                     </image>
                  </ImageView>
                    <Label fx:id="itemNameLabel" text="Double Krusty Burger" />
                    <Label fx:id="itemPriceLabel" text="\$4.99" />
               </children>
            </VBox>
         </center>
         <bottom>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="addToCartButton" onAction="#handleAddToCart" text="Add to Cart" />
                  <Button fx:id="goToCartButton" layoutX="138.0" layoutY="98.0" onAction="#openCartView" text="Go to Cart" />
               </children>
            </VBox>
         </bottom>
         <VBox.margin>
            <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
         </VBox.margin>
      </BorderPane>
    </children>
</VBox>
