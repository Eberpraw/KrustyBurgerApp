<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.MainViewController" spacing="10" alignment="CENTER" prefHeight="730" prefWidth="337">
    <children>
        <Label fx:id="stepLabel" />
        <ImageView fx:id="itemImageView" fitHeight="200" fitWidth="200" />
        <Label fx:id="itemNameLabel" />
        <Label fx:id="itemPriceLabel" />
        <HBox alignment="CENTER" spacing="10">
            <Button text="Previous" onAction="#handlePreviousItem" />
            <Button text="Next" onAction="#handleNextItem" />
            <Button text="Add to Cart" onAction="#handleAddToCart" />
        </HBox>
    </children>
</VBox>