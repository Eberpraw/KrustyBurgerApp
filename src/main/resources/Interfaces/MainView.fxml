<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="730" prefWidth="337" stylesheets="@/stylesheet.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MainViewController">
    <children>
      <BorderPane prefHeight="730.0" prefWidth="337.0">
         <left>
               <Button fx:id="previousItemButton" onAction="#handlePreviousItem" styleClass="circleButton" BorderPane.alignment="CENTER">
               <graphic>
                  <ImageView fitHeight="10.0" fitWidth="10.0" pickOnBounds="true" preserveRatio="true" rotate="180.0">
                     <image>
                        <Image url="@../Images/Arrow.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
         </left>
         <right>
               <Button fx:id="nextItemButton" onAction="#handleNextItem" styleClass="circleButton" BorderPane.alignment="CENTER">
               <graphic>
                  <ImageView fitHeight="10.0" fitWidth="10.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/Arrow.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
         </right>
         <top>
              <Label fx:id="stepLabel" styleClass="text" text="Select Main Item" textAlignment="CENTER" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="30.0" />
               </BorderPane.margin>
               <font>
                  <Font size="16.0" />
               </font></Label>
         </top>
         <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                    <ImageView fx:id="itemImageView" fitHeight="230.0" fitWidth="500.0" preserveRatio="true" styleClass="imageShadow">
                     <image>
                        <Image url="@../Images/DoubleKrustyBurgerWCheese.png" />
                     </image>
                  </ImageView>
                    <Label fx:id="itemNameLabel" styleClass="text" text="Double Krusty &#10;Burger" textAlignment="CENTER">
                     <font>
                        <Font size="32.0" />
                     </font></Label>
                    <Label fx:id="itemPriceLabel" styleClass="text" text="\$4.99">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin></Label>
               </children>
            </VBox>
         </center>
         <bottom>
            <VBox alignment="CENTER" prefHeight="70.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="goToCartButton" layoutX="138.0" layoutY="98.0" onAction="#openCartView" text="Go to Cart" translateY="10.0" />
                  <Button fx:id="addToCartButton" onAction="#handleAddToCart" text="Add to Cart" translateY="-25.0" />
               </children>
            </VBox>
         </bottom>
         <VBox.margin>
            <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
         </VBox.margin>
      </BorderPane>
    </children>
</VBox>
